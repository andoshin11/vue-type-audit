{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "types": ["node", "jest"],
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts", "example/**", "src/sourcemap/fixtures/*"]
}
